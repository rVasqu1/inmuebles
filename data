DATA: lt_vbrk TYPE TABLE OF vbrk,
      lt_vbrp TYPE TABLE OF vbrp.

SELECT *
  FROM vbrk
  INTO TABLE lt_vbrk
  WHERE vkorg = 'Y051'
    AND fkdat BETWEEN '20250101' AND '20250531'.

IF lt_vbrk IS NOT INITIAL.
  SELECT *
    FROM vbrp
    INTO TABLE lt_vbrp
    FOR ALL ENTRIES IN lt_vbrk
    WHERE vbeln = lt_vbrk-vbeln
      AND matnr IN ('MSDD123', 'MSD432', 'MSD768').
ENDIF.
